<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="#005f9e"
        app:layout_heightPercent="5%"
        app:layout_marginTopPercent="7%"
        app:layout_widthPercent="70%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_live_logo_icon"
            android:gravity="center_vertical"
            android:text="WEAPON DEPOT"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:src="@drawable/ic_slider_chat"
        app:layout_heightPercent="25%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="70%" />

    <TextView
        android:id="@+id/tv_appname"
        fontPath="fonts/Poppins-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:gravity="center"
        android:text="Start A Chat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_marginBottomPercent="1%"
        app:layout_marginTopPercent="5%"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/tv_msg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_appname"
        android:gravity="center"
        android:padding="20dp"
        android:text="Your unwanted, new, or, used items to the Weapon Depot Live community"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

</android.support.percent.PercentRelativeLayout>
